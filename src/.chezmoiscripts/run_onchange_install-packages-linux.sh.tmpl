{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash

# Install Linux Packages
{{      if or (eq .chezmoi.osRelease.id "debian") (eq .chezmoi.osRelease.id "ubuntu") -}}
# Ubuntu/Debian-specific code

sudo apt update && \
sudo apt install -y \
	bat \
	build-essential \
	git \
	nano \
	tmux \
	unzip \
	zsh

# Symlink batcat to bat
echo "Symlinking batcat to bat"
mkdir -p ~/.local/bin
ln -s /usr/bin/batcat ~/.local/bin/bat

# Install fzf binary
if [ -d ~/.fzf ]; then
	# Update existing fzf installation
	cd ~/.fzf && git pull && cd - > /dev/null
else
	# Clone fzf if it doesn't exist
	git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
fi
~/.fzf/install --bin

# Symlink fzf binaries to ~/.local/bin
echo "Symlinking fzf binaries to ~/.local/bin"
mkdir -p ~/.local/bin
if [ -f ~/.fzf/bin/fzf ]; then
	ln -sf ~/.fzf/bin/fzf ~/.local/bin/fzf
fi
if [ -f ~/.fzf/bin/fzf-tmux ]; then
	ln -sf ~/.fzf/bin/fzf-tmux ~/.local/bin/fzf-tmux
fi

# Install rust and cargo
echo "Installing rust and cargo"
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- --no-modify-path -y

export PATH=$PATH:$HOME/.cargo/bin # this adds cargo path to current shell
source "$HOME/.cargo/env" # this loads cargo for the current shell

# Install/Update eza
cargo install eza

# Install/Update nvm
# install-nvm.sh.tmpl hash: {{ includeTemplate "install-nvm.sh.tmpl" . | sha256sum }}
{{ includeTemplate "install-nvm.sh.tmpl" . }}

# Install oh-my-posh
echo "Installing oh-my-posh..."
curl -s https://ohmyposh.dev/install.sh | bash

# Install zoxide
echo "Installing zoxide..."
curl -sS https://raw.githubusercontent.com/ajeetdsouza/zoxide/main/install.sh | bash

{{      else if eq .chezmoi.osRelease.id "fedora" -}}
echo "Unsupported Linux distribution"
# Fedora-specific code
exit 1

{{      else if eq .chezmoi.osRelease.id "arch" -}}
echo "Unsupported Linux distribution"
# Arch-specific code
exit 1

{{      else -}}
echo "Unsupported Linux distribution"
exit 1

{{      end -}}

